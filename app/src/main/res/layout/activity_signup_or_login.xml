<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup_or_login">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_btn_signup_or_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/login_signup_or_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="signup"
        android:backgroundTint="@color/main_color"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_signup_or_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/signup_btn_signup_or_login"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintCircleRadius="@dimen/_14sdp"
        android:text="login"
        android:backgroundTint="@color/main_color"/>


</androidx.constraintlayout.widget.ConstraintLayout>